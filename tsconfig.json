{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM",
      "WebWorker"
    ],
    "types": [
      "node",
      "vscode"
    ],
    "target": "ESNext",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "vscode": [
        "./mocks/vscode.ts"
      ]
    }
  }
}